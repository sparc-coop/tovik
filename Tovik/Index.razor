                            </li>
                            <li>
                                <h3>Yours to Keep</h3>
                                <p>No expiration, no time limits.</p>
                            </li>
                        </ul>

                        @if (Error != null)
                        {
                            <div class="error-message">@Error</div>
                        }
                    </div>
                    <footer>
                        <button class="add-btn primary-btn" @onclick=Start>Try Tovik Free &rarr;</button>
                    </footer>
                </section>

                @if (Product != null)
                {
                    <section class="trial">
                        <header>
                            <img src="/images/Star.svg" alt="Star" />
                        </header>
                        <div>
                            <h2>
                                Purchase Tovik
                                <span>@Product.FormattedPrice</span>
                            </h2>
                            <ul>
                                <li>
                                    <h3><span>100,000</span> Words Included</h3>
                                    <p>Massive multilingual coverage in a single bundle.</p>
                                </li>
                                <li>
                                    <h3><span>Unlimited</span> Domains</h3>
                                    <p>Use across all your sites, no restrictions.</p>
                                </li>
